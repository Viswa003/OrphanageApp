<!DOCTYPE html>
<html>
<head>
    <title>New Child</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <h1>Add New Child</h1>
    <form action="/children" method="POST">
        <label for="name">Name:</label>
        <input type="text" id="name" name="name" required><br>

        <label for="dateOfBirth">Date of Birth:</label>
        <input type="date" id="dateOfBirth" name="dateOfBirth" required><br>

        <label for="gender">Gender:</label>
        <select id="gender" name="gender" required>
            <option value="Male">Male</option>
            <option value="Female">Female</option>
            <option value="Other">Other</option>
        </select><br>

        <label for="orphanage">Orphanage:</label>
        <select id="orphanage" name="orphanage" required>
            <% orphanages.forEach(function(orphanage) { %>
                <option value="<%= orphanage._id %>"><%= orphanage.name %></option>
            <% }) %>
        </select><br>

        <label for="educationLevel">Education Level:</label>
        <input type="text" id="educationLevel" name="educationLevel"><br>

        <label for="medicalNeeds">Medical Needs:</label>
        <input type="text" id="medicalNeeds" name="medicalNeeds"><br>

        <label for="guardianContact">Guardian Contact:</label>
        <input type="text" id="guardianContact" name="guardianContact"><br>

        <label for="supportHistory">Support History:</label>
        <textarea id="supportHistory" name="supportHistory"></textarea><br>

        <button type="submit">Add Child</button>
    </form>
    <a href="/children">Back to List</a>
</body>
</html>
