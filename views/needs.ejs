<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Needs</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <h1>Needs List</h1>
    <table>
        <thead>
            <tr>
                <th>Title</th>
                <th>Description</th>
                <th>Amount Required</th>
                <th>Orphanage</th>
            </tr>
        </thead>
        <tbody>
            <% needs.forEach(need => { %>
                <tr>
                    <td><%= need.title %></td>
                    <td><%= need.description %></td>
                    <td><%= need.amountRequired %></td>
                    <td><%= need.orphanageName %></td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</body>
</html>
